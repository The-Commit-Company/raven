{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "jsxImportSource": "nativewind",
    "strict": true,
    "composite": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      /** Add all packages to the paths */
      "@raven/types/*": [
        "../../packages/types/*"
      ],
      "@raven/lib/*": [
        "../../packages/lib/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@theme/*": [
        "./theme/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    /** Use all files in the packages folder */
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx",
    "nativewind-env.d.ts",
    "declarations.d.ts"
  ]
}